{
  "name": "usagi-ts",
  "version": "0.1.0",
  "description": "TypeScript library for managing CodeRabbit configuration files",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "usagi": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./presets": {
      "import": "./dist/presets.js",
      "types": "./dist/presets.d.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "build:cli": "bun build ./src/cli.ts --outdir ./dist --target node",
    "generate-types": "bun run scripts/generate-types.ts",
    "prepublishOnly": "bun run generate-types && bun run build && bun run build:cli",
    "test": "bun test",
  },
  "dependencies": {
    "js-yaml": "4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "4.0.5",
    "@types/bun": "1.2.8",
    "json-schema-to-typescript": "11.0.2",
    "typescript": "5.8.2"
  }
}
